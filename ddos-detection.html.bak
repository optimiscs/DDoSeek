                    <button class="attack-action-btn btn-track">追踪路径</button>
                </div>
            `;
            
            // 更新指示器
            document.querySelectorAll('.card-indicator').forEach((indicator, index) => {
                indicator.classList.toggle('active', index === currentCardIndex);
            });
        }

        // 上一张卡片
        function previousCard() {
            if (currentCardIndex > 0) {
                currentCardIndex--;
                updateCardView();
            }
        }

        // 下一张卡片
        function nextCard() {
            if (currentCardIndex < attackData.length - 1) {
                currentCardIndex++;
                updateCardView();
            }
        }

        // 开关切换功能
        function toggleSwitch(element) {
            element.classList.toggle('active');
