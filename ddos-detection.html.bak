            const levelTexts = ['低威胁', '中等威胁', '高威胁', '严重威胁'];
            const randomLevel = Math.floor(Math.random() * 4);
            
            threatIndicator.className = 'threat-level-indicator ' + levels[randomLevel];
            threatIndicator.textContent = levelTexts[randomLevel];

            // 更新KPI数据
            const kpiValues = document.querySelectorAll('.kpi-value-large');
            kpiValues[0].textContent = Math.floor(Math.random() * 500 + 1000).toLocaleString();
            kpiValues[1].textContent = (Math.random() * 2 + 98).toFixed(1) + '%';
            kpiValues[2].textContent = Math.floor(Math.random() * 200 + 700) + 'K';
            kpiValues[3].textContent = Math.floor(Math.random() * 50 + 120);

            // 更新图表数据
            const newThreatData = Array.from({length: 10}, () => Math.floor(Math.random() * 600 + 200));
            threatChart.setOption({
                series: [{ data: newThreatData }]
            });
        }

