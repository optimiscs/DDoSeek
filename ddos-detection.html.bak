            document.querySelectorAll('.tab-content').forEach(content => {
                content.style.display = 'none';
            });
            
            // 激活当前标签页
            event.target.classList.add('active');
            document.getElementById(tabName + '-tab').style.display = 'block';
        }

        // 视图切换功能
        function switchView(viewType) {
            const listView = document.querySelector('.attack-list');
            const cardView = document.querySelector('.attack-cards-container');
            const listBtn = document.querySelector('.view-toggle-btn:first-child');
            const cardBtn = document.querySelector('.view-toggle-btn:last-child');
            
            if (viewType === 'list') {
                listView.classList.add('active');
                cardView.classList.remove('active');
                listBtn.classList.add('active');
                cardBtn.classList.remove('active');
            } else {
                listView.classList.remove('active');
                cardView.classList.add('active');
                listBtn.classList.remove('active');
                cardBtn.classList.add('active');
                updateCardView();
            }
        }

        // 更新卡片视图
        function updateCardView() {
            const card = document.querySelector('.attack-card-large');
            const data = attackData[currentCardIndex];
            
